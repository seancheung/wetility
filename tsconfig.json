{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "lib",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "experimentalDecorators": true
  },
  "include": ["**/*"]
}
